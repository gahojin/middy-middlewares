{
  "name": "middy-middlewares",
  "author": "GAHOJIN, Inc.",
  "license": "Apache-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/gahojin/middy-middlewares.git"
  },
  "scripts": {
    "preinstall": "pnpm dlx only-allow pnpm",
    "prepare": "husky",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "check": "turbo run check",
    "check:packagejson": "turbo run check:packagejson",
    "test": "turbo run test:unit",
    "clean": "pnpm -r --parallel exec rimraf dist .turbo *.log",
    "ncu": "npm-check-updates --workspaces -u"
  },
  "dependencies": {
    "@arethetypeswrong/cli": "0.17.4",
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@fast-check/vitest": "0.2.0",
    "@types/node": "20.17.28",
    "@vitest/coverage-v8": "3.0.9",
    "esbuild": "0.25.2",
    "husky": "9.1.7",
    "jest-extended": "4.0.2",
    "npm-check-updates": "17.1.16",
    "rimraf": "6.0.1",
    "tsup": "8.4.0",
    "turbo": "2.4.4",
    "typescript": "5.8.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.0.9"
  },
  "packageManager": "pnpm@10.7.0",
  "engines": {
    "node": ">=18.x",
    "npm": "use pnpm",
    "pnpm": ">=9.x",
    "yarn": "use pnpm"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "$esbuild"
    }
  }
}
