{
  "name": "@gahojin-inc/middy-valibot-validator",
  "version": "2025.3.1",
  "description": "Middy valibot validator",
  "author": "GAHOJIN, Inc.",
  "license": "Apache-2.0",
  "type": "module",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/gahojin/middy-middlewares.git",
    "directory": "packages/middy-valibot-validator"
  },
  "files": ["dist"],
  "keywords": ["middy", "valibot", "lambda", "aws"],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "rimraf dist",
    "build": "rolldown -c",
    "prepublish": "pnpm run build",
    "lint": "biome check --write .",
    "check": "tsc --noEmit",
    "check:packagejson": "attw --pack .",
    "test": "vitest --watch",
    "test:unit": "vitest --passWithNoTests --run --coverage"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "dependencies": {
    "valibot": "1.0.0"
  },
  "devDependencies": {
    "@gahojin-inc/aws-lambda-mock-context": "2025.3.0",
    "@middy/core": "6.1.6",
    "@middy/util": "6.1.6",
    "@valibot/i18n": "1.0.0"
  },
  "peerDependencies": {
    "valibot": "^0 || ^1",
    "@middy/core": "^5 || ^6",
    "@middy/util": "^5 || ^6"
  }
}
