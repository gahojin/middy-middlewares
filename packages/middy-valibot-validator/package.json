{
  "name": "@gahojin-inc/middy-valibot-validator",
  "version": "2026.1.2",
  "description": "Middy valibot validator",
  "author": "GAHOJIN, Inc.",
  "license": "Apache-2.0",
  "type": "module",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/gahojin/middy-middlewares.git",
    "directory": "packages/middy-valibot-validator"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "middy",
    "valibot",
    "lambda",
    "aws"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "rolldown -c",
    "prepublishOnly": "pnpm run build",
    "lint": "biome check --write .",
    "lint:ci": "biome ci .",
    "check": "tsc --noEmit",
    "check:packagejson": "attw --pack .",
    "test": "vitest --watch",
    "test:unit": "vitest --passWithNoTests --run --coverage"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "devDependencies": {
    "@gahojin-inc/aws-lambda-mock-context": "2026.2.0",
    "@middy/core": "7.1.0",
    "@middy/util": "7.1.0",
    "@valibot/i18n": "1.0.0",
    "valibot": "1.2.0"
  },
  "peerDependencies": {
    "@middy/core": "^5 || ^6 || ^7",
    "@middy/util": "^5 || ^6 || ^7",
    "valibot": "^0 || ^1"
  }
}
